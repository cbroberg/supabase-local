{
	# Caddy issues certs via its internal CA for local HTTPS
	# Trust the CA cert on each device — see README.md for instructions
}

# Supabase API — simulates https://yourproject.supabase.co
https://supabase.db {
	tls internal
	reverse_proxy 127.0.0.1:54321 {
		header_up X-Forwarded-Proto https
	}
}

# Supabase Studio — simulates the supabase.com dashboard
https://studio.supabase.db {
	tls internal
	reverse_proxy 127.0.0.1:54323 {
		header_up X-Forwarded-Proto https
	}
}
